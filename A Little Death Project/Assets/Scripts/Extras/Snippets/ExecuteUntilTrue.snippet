<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>ExecuteUntilTrue</Title>
      <Author>Tau Phika</Author>
      <Description>Executes an action until X becomes true.</Description>
      <Shortcut>ExecuteUntilTrue</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSHARP">
        <![CDATA[this.ExecuteUntilTrue($Condition$,$Exec$);]]>
      </Code>
      <Declarations>
        <Object>
          <ID>Condition</ID>
          <ToolTip>The condition that should become true in order for the action to stop its execution.</ToolTip>
          <Default>() => false</Default>
        </Object>
        <Literal>
          <ID>Exec</ID>
          <ToolTip>What should it execute until X happens?</ToolTip>
          <Default> () =>
            {

            }
          </Default>
        </Literal>
      </Declarations>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
